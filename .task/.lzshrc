#!/usr/bin/env zsh

export TASK_SEND_ENABLED=1

alias t='task'

function precmd() {
    tmux -L GTD send-keys -t GTD:0.0 "tc" "Enter"
    task_refresh -F "timew,khal"
}

n() {
    eval "precmd() { tmux -L GTD send-keys -t GTD:0.0 q C-u \"clear && $*\" \"Enter\"; }"
}

np() {
    eval "precmd() { tmux -L GTD send-keys -t GTD:0.0 q C-u \"clear && tga project:$*\" \"Enter\"; }"
}

nps() {
    eval "precmd() { tmux -L GTD send-keys -t GTD:0.0 q C-u \"clear && tga project:Study.$*\" \"Enter\"; }"
}

tas() { tmux send-keys "ta project:Study.$*" "Enter"; }

tt() {
    (sleep 0.5 && task_send "$*") &
}
