#!/usr/bin/env python

"""GitHub on-add hook.

This hook contains functions that run on tasks that correspond to GitHub issues (which were pulled
using bugwarrior)
"""

import json
import sys

import github

new_task = json.loads(sys.stdin.readline())

if __name__ == "__main__":
    if github.is_issue(new_task):
        new_task = github.depends(new_task)
    print(json.dumps(new_task))
    sys.exit(0)
