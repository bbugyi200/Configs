#
# wm independent hotkeys
#

# terminal emulator
super + x
        termite -e 'tm Terminal'

# program launcher
alt + space
        dmenu_run

# make sxhkd reload its configuration files:
alt + r
        pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# close and kill
alt + {_,shift + }w
        bspc node -{c,k}

#
# state/flags
#

# set the window state
alt + {t,shift + t,s,f}
        bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
alt + ctrl + {l,s,p,h}
        bspc node -g {locked,sticky,private,hidden}

# Un-hides last hidden window
alt + ctrl m
        bspc node $(bspc query -N -n .hidden | tail -n1) -g hidden=off

#
# focus/swap
#

# focus the node in the given direction
alt + {h,j,k,l}
        bspc node -f {west,south,north,east}

# swap nodes while retaining focus
super + alt {h,j,k,l}
        D={west,south,north,east}; \
        M=$(bspc query --monitors --node $D); \
        bspc node -s $D; \
        [[ $M != $(bspc query --monitors --monitor focused) ]] && bspc node --focus last

# focus the next/previous node
alt + {n,p}
        bspc node -f {next,prev}

# focus the next/previous desktop (only if on the same monitor)
alt + bracket{left,right}
        bspc desktop -f {prev,next}.local

# focus the next/previous monitor
super + bracket{left,right}
        bspc monitor -f {prev,next}

# focus the older or newer node in the focus history
alt + {o,i}
        bspc wm -h off; \
        bspc node {older,newer} -f; \
        bspc wm -h on

# focus or send to the given desktop
alt + {_,shift + }{1-9,0}
        bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + {h,j,k,l}
        bspc node -p {west,south,north,east}

# preselect the ratio
super + {1-9}
        bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + space
        bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
        bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel
