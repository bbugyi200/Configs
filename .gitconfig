[init]
	templatedir = ~/.git_template
[core]
	excludesfile = ~/.gitignore_global
[merge]
	tool = fugitive
[mergetool]
	keepBackup = false
[alias]
	co = checkout
    mr = !sh -c 'git fetch $1 merge-requests/$2/head:mr-$1-$2 && git checkout mr-$1-$2' -
[color]
	status = always
[diff]
	submodule = log
[github]
	user = bbugyi200
[pull]
	rebase = true
[pager]
	branch = false
[mergetool "fugitive"]
	cmd = vim -f -c \"Gvdiff\" \"$MERGED\"
[user]
	email = bryanbugyi34@gmail.com
	name = Bryan Bugyi
[commit]
	template = ~/.gitmessage
