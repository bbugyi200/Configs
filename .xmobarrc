Config { font = "xft:Dina:pixelsize=13"
	   , iconRoot = "/home/bryan/.xmonad/.icons"
       , bgColor = "black"
       , fgColor = "grey"
       , position = TopW L 100
       , lowerOnStart = True
       , commands = [ Run Date "%a %b %_d, %H:%M:%S" "date" 10
					, Run DynNetwork [ "--template" , "<dev>: <tx>kB/s|<rx>kB/s"
									 , "--Low"      , "1000"       -- units: B/s
									 , "--High"     , "5000"       -- units: B/s
									 , "--low"      , "darkgreen"
									 , "--normal"   , "darkorange"
									 , "--high"     , "darkred"
									 ] 10
					, Run Battery [ "--template" , "Batt: <acstatus>"
								  , "--Low"      , "10"        -- units: %
                             	  , "--High"     , "80"        -- units: %
                             	  , "--low"      , "darkred"
                             	  , "--normal"   , "darkorange"
                             	  , "--high"     , "darkgreen"

                             	  , "--" -- battery specific options
                                  -- discharging status
                                  , "-o"	, "<left>% (<timeleft>)"
                                  -- AC "on" status
                                  , "-O"	, "<fc=#dAA520>Charging</fc>"
                                  -- charged status
                                  , "-i"	, "<fc=#006000>Charged</fc>"
								 ] 50
					, Run Volume "default" "Master" ["--template", "<volumebar>"] 5
					, Run Com "poll-hamster" [] "hamster" 10
                    , Run UnsafeStdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%UnsafeStdinReader% }%hamster%{ %dynnetwork%  |  %battery%  |  %default:Master%  |  %date%" 
       }
