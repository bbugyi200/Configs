[options]
suppress_default_binds = true


[aliases]
q = quit
next = select_rel 1
previous = select_rel -1
n = select_rel 1
p = select_rel -1


[binds]
a = zoom actual
c = center
d = overlay
f = fullscreen
gg = select_abs 0
<Shift+g> = select_abs -1
h = pan 50 0
i = zoom 1
j = pan 0 -50
<Shift+j> = select_rel 1
k = pan 0 50
<Shift+k> = select_rel -1
l = pan -50 0
o = zoom -1
p = exec echo $imv_current_file
q = quit
r = reset
s = scaling_mode next
t = slideshow_duration +1
<Shift+t> = slideshow_duration -1
x = close

# Image navigation
<Left> = select_rel -1
<LeftSquareBracket> = select_rel -1
<Right> = select_rel 1
<RightSquareBracket> = select_rel 1

# Zooming
<Up> = zoom 1
<Down> = zoom -1

# Gif playback
. = next_frame
<Space> = toggle_playing
