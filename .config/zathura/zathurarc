set selection-clipboard clipboard

set window-title-basename true
set window-title-page true
set show-recent 25

set link-zoom false

map <C-n> feedkeys ":exec notepad --open %<Return>"
map <C-s> feedkeys ":exec notepad --open -b %<Return>"
map <Space> feedkeys ":exec notepad --put=major %<Return>"
map <C-Space> feedkeys ":exec notepad --put=major --cut=none %<Return>"
map <S-Space> feedkeys ":exec notepad --put=minor %<Return>"
map <Return> feedkeys ":exec notepad --dmenu --put=major %<Return>"
map <S-Return> feedkeys ":exec notepad --dmenu --put=minor %<Return>"
map <A-d> feedkeys ":exec notepad --undo %<Return>"


map bb focus_inputbar ":bmark "
map bs feedkeys ":bmark stop<Return>"
map bt feedkeys ":bmark TOC<Return>"
map bq feedkeys ":bmark questions<Return>"
map ba feedkeys ":bmark answers<Return>"
map bl feedkeys ":blist <Tab><C-u>blist"
map b1 feedkeys ":blist 1<Tab>"
map b2 feedkeys ":blist 2<Tab>"
map b3 feedkeys ":blist 3<Tab>"
map b4 feedkeys ":blist 4<Tab>"
map b5 feedkeys ":blist 5<Tab>"
map b6 feedkeys ":blist 6<Tab>"
map b7 feedkeys ":blist 7<Tab>"
map b8 feedkeys ":blist 8<Tab>"
map b9 feedkeys ":blist 9<Tab>"

map gs feedkeys ":blist stop<Return>"
map gt feedkeys ":blist TOC<Return>"
map gq feedkeys ":blist questions<Return>"
map ga feedkeys ":blist answers<Return>"

map o feedkeys ":exec dmenu_books<Return>"


map <C-y> focus_inputbar ":exec xdotool key y"

unmap [index] <Tab>
map [index] <C-t> toggle_index
map [index] <Tab> feedkeys "<C-t><C-y><C-y><C-y><C-y><C-y><C-y><Return>"

unmap [index] <Return>
map [index] <C-n> navigate_index select
map [index] <Return> feedkeys "<C-n><C-y><C-y><C-y><C-y><C-y><Return>"
