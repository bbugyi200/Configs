gri() { git rebase -i HEAD~$1; }
alias grc='git rebase --continue'

unalias gco  # Defined in Oh-My-Zsh's Git plugin
gco() {
    if [[ -n "$1" ]]; then
        git checkout "$@"
    else
        git checkout @{-1}  # Last Branch (aka 'git checkout -')
    fi
}


