# ------------------------- FUNCTIONS + ALIASES --------------------------------

# ---------- Unalias / Disable
# I don't like not being able to make a local alias with these
unalias l
disable r


# ---------- Vim
alias lim='vim -c "normal \`0" -c "bdelete 1"'
alias onething='vim -c "/$(date --date="yesterday" +%m\\/%d\\/%Y)" ~/Dropbox/notes/Onething/{body.txt,mind.txt,heart.txt}'
alias sch='vim ~/Dropbox/notes/Rutgers/course_schedule.txt ~/Dropbox/notes/misc/projects/project_schedule.txt'
alias vihor='vim ~/Dropbox/notes/Horizons_of_Focus/*'
alias vip="vim -c 'execute \"normal \\<c-p>\"'"
fim() { vim -c 'CtrlPMRU' -c "normal $1" -c 'execute "normal \<cr>"'; }

mim() {
    if [[ -z "$1" ]]; then
        echo "usage: mim <mark>"
        return 1
    fi
    if [[ "/bin/zsh" == $SHELL ]]; then
        MARK=${1:u}
    elif [[ "/bin/bash" == $SHELL ]]; then
        MARK=${1^^}
    fi
    vim -c "normal \`$MARK" -c "bdelete 1" -c "normal g;"
}

# Enables vim :Man command from the terminal
vman() {
	vim -c "SuperMan $*"

	if [ "$?" != "0" ]; then
		echo "No manual entry for $*"
	fi
}


